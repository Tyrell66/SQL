DECLARE @continue INT
DECLARE @rowcount INT
 
SET @continue = 1

WHILE @continue = 1
BEGIN
    PRINT GETDATE()
    SET ROWCOUNT 2000
    BEGIN TRANSACTION
      DELETE FROM some_big_table WHERE -- statement
      SET @rowcount = @@rowcount 
    COMMIT
    PRINT GETDATE()
    IF @rowcount = 0
    BEGIN
        SET @continue = 0
    END
END 
 
